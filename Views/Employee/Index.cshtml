
@{
    ViewBag.Title = "Ажилчдын жагсаалт";
}

<h2>Хүний нөөцийн программ</h2>

<table id="employeeTable" class="display">
    <thead>
        <tr>
            <th>Нэр</th>
            <th>Албан тушаал</th>
            <th>Оффис</th>
            <th>Нас</th>
            <th>Цалин</th>
            <th>Удирдлага</th>
        </tr>
    </thead>
</table>

<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
@section footer{
    <p>
        зохиогчийн эрхтэй
    </p>
    
    
    }
@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script> 

    <script>
        $(document).ready(function () {
            $("#employeeTable").DataTable({
                "ajax": {
                    "url": "/Employee/GetData",
                    "type": "GET",
                    "datatype":"json"
                },
                "columns": [
                    { "data": "Name" },
                    { "data": "Position" },
                    { "data": "Office" },
                    { "data": "Age" },
                    { "data": "Salary" },
                    {
                        "data": "EMPLOYEEID", "render": function (data) {
                            return "<a href='/Employee/Edit/" + data + "' class='btn btn - sm' role='button'>Засах</a><a href='/Employee/Delete/" + data + "' class='btn btn - sm' role='button'>Устгах</a>"
                        },
                    }
                ]
            })
        })
    </script>
    }